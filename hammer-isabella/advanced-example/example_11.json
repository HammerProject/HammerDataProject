// NYC Social Media Usage
// Twitter and Facebook statistics from various NYC agencies and organizations
// filter for agency = 311
//
// from https://data.cityofnewyork.us
// (Open Data City of New York)
// 
//
// SQL
// SELECT platform, date_sampled
// FROM platform
// WHERE agency = '311' and date_sampled >= '01/01/2015'

{
  "select": [
      { "column": { "instance": "platform", "label":"platform"}},
  	  { "column": { "instance": "platform", "label":"date_sampled"}},
      { "column": { "instance": "platform", "label":"metric"}}
  ],
  "from": [
    "platform"
  ],
  "where": [{"condition": {
      "instance1": "platform",
      "label1": "agency",
      "operator": "eq",
      "value": "311",
      "logicalOperator": "and"
    }},{"condition": {
      "instance1": "platform",
      "label1": "date_sampled",
      "operator": "ge",
      "value": "01/01/2015",
      "logicalOperator": "and"
    }}
  ]
}

