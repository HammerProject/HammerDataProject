//
// salary_range_from >= 40k (type = internal)
// Baccalaureate Degree in Marine Engineering or Naval Architecture
//
//
// from https://data.cityofnewyork.us
// (Open Data City of New York)
// 
//
// SQL
// SELECT agency, salary_range_from, salary_range_to, job_description
// FROM jobs
// WHERE salary_range_from >= 40000 and preferred_skills = "Baccalaureate Degree in Marine Engineering or Naval Architecture"
// and posting_type = "Internal"

{
  "select": [
  	  { "column": { "instance": "jobs", "label":"agency"}},
      { "column": { "instance": "jobs", "label":"salary_range_from"}},
      { "column": { "instance": "jobs", "label":"salary_range_to"}},
      { "column": { "instance": "jobs", "label":"work_location"}},
      { "column": { "instance": "jobs", "label":"job_description"}}
  ],
  "from": [
    "jobs"
  ],
  "where": [{"condition": {
      "instance1": "jobs",
      "label1": "salary_range_from",
      "operator": "ge",
      "value": 40000,
      "logicalOperator": "and"
    }},{"condition": {
      "instance1": "jobs",
      "label1": "preferred_skills",
      "operator": "eq",
      "value": "Baccalaureate Degree in Marine Engineering or Naval Architecture",
      "logicalOperator": "and"
    }},{"condition": {
      "instance1": "jobs",
      "label1": "posting_type",
      "operator": "eq",
      "value": "Internal",
      "logicalOperator": "and"
    }}
  ]
}

