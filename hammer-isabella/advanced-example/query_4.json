// SQL
// SELECT aggiudicatari, importo
// FROM gare
// WHERE regione = 'LOMBARDIA' and oggetto like '%EXPO%' and anno = 2015

{
  "select": [
  	  { "column": { "instance": "gare", "label":"aggiudicatari"}},
  	  { "column": { "instance": "gare", "label":"importo"}}
  ],
  "from": [
    "gare"
  ],
  "where": [{"condition": {
      "instance1": "gare",
      "label1": "regione",
      "operator": "eq",
      "value": "LOMBARDIA",
      "logicalOperator": "and"
    }},{"condition": {
      "instance1": "gare",
      "label1": "anno",
      "operator": "eq",
      "value": 2015,
      "logicalOperator": "and"
    }},{"condition": {
      "instance1": "gare",
      "label1": "oggetto",
      "operator": "eq",
      "value": "EXPO",
      "logicalOperator": "and"
    }}
  ]
}

