// 
// Number of International Visitors (total visits and total spend) to London
//
// http://data.london.gov.uk
// 
//
// SQL
// SELECT origin, visits, total
// FROM tourists, spend
// WHERE city = "London" and year = 2015

{
  "select": [
  	  { "column": { "instance": "tourists", "label":"origin"}},
      { "column": { "instance": "tourists", "label":"visits"}},
      { "column": { "instance": "spend", "label":"total"}}
  ],
  "from": [
    "tourists",
    "spend"
  ],
  "where": [{"condition": {
      "instance1": "tourists",
      "label1": "city",
      "operator": "eq",
      "value": "London",
      "logicalOperator": "and"
    }},{"condition": {
      "instance1": "tourists",
      "label1": "year",
      "operator": "eq",
      "value": 2015,
      "logicalOperator": "and"
    }}
  ]
}

