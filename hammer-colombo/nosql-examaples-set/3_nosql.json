//
// Return all job-offers in Madrid or Bilbao
// 
//

{
  "select": [
      { "column": { "instance": "vacancies", "label":"title"}},
      { "column": { "instance": "vacancies", "label":"description"}},
      { "column": { "instance": "vacancies", "label":"place"}},
      { "column": { "instance": "vacancies", "label":"country"}}
  ],
  "from": [
    "vacancies"
  ],
  "where": [{"condition": {
      "instance1": "vacancies",
      "label1": "place",
      "operator": "eq",
      "value": "Madrid",
      "logicalOperator": "or"
    }}, {"condition": {
      "instance1": "vacancies",
      "label1": "place",
      "operator": "eq",
      "value": "Bilbao",
      "logicalOperator": "or"
    }}
  ]
}

