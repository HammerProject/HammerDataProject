// Police crime stats 2015 --> focus on "Drug-related crime"
// Africa
//


{
  "select": [
  	  { "column": { "instance": "crimedatabase", "label":"province"}},
      { "column": { "instance": "crimedatabase", "label":"category"}},
      { "column": { "instance": "crimedatabase", "label":"count"}}
  ],
  "from": [
    "crimedatabase"
  ],
  "where": [{"condition": {
      "instance1": "crimedatabase",
      "label1": "category",
      "operator": "eq",
      "value": "drug",
      "logicalOperator": "and"
    }},{"condition": {
      "instance1": "crimedatabase",
      "label1": "year",
      "operator": "eq",
      "value": 2015,
      "logicalOperator": "and"
    }}
  ]
}
