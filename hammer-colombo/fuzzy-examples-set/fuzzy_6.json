// 
// Where are Water point with insufficient quantity or dry?
//

{
  "select": [
      { "column": { "instance": "waterpoint", "label":"region"}},
  	  { "column": { "instance": "waterpoint", "label":"ward"}},
 	  { "column": { "instance": "waterpoint", "label":"quantity"}},
 	  { "column": { "instance": "waterpoint", "label":"waterquality"}},
 	  { "column": { "instance": "waterpoint", "label":"longitude"}},
 	  { "column": { "instance": "waterpoint", "label":"latitude"}},
      { "column": { "instance": "waterpoint", "label":"status"}}
  ],
  "from": [
    "waterpoint"
  ],
  "where": [{"condition": {
      "instance1": "waterpoint",
      "label1": "quantity",
      "operator": "eq",
      "value": "dry",
      "logicalOperator": "or"
    }},{"condition": {
      "instance1": "waterpoint",
      "label1": "quantity",
      "operator": "eq",
      "value": "insufficient",
      "logicalOperator": "or"
    }}
  ]
}

