// 
// Water Usage by city, year and description (year = 2016)
//

{
  "select": [
      { "column": { "instance": "water_usage", "label":"city"}},
  	  { "column": { "instance": "water_usage", "label":"year"}},
 	  { "column": { "instance": "water_usage", "label":"description"}},
      { "column": { "instance": "water_usage", "label":"consumption"}}
  ],
  "from": [
    "water_usage"
  ],
  "where": [{"condition": {
      "instance1": "water_usage",
      "label1": "year",
      "operator": "eq",
      "value": "2016",
      "logicalOperator": "and"
    }}
  ]
}

