//
// Police crime stats 2015 --> focus on "Drug-related crime"
//


{
  "select": [
      { "column": { "instance": "crime", "label":"statistics"}}
  ],
  "from": [
    "crime"
  ],
  "where": [{"condition": {
      "instance1": "crime",
      "label1": "crime-category",
      "operator": "eq",
      "value": "drug",
      "logicalOperator": "and"
    }},{"condition": {
      "instance1": "crime",
      "label1": "year",
      "operator": "eq",
      "value": 2015,
      "logicalOperator": "and"
    }}
  ]
}
