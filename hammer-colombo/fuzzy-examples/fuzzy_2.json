//
// List of Damns and hazard potential clas. hight/significant  (LIMPOPO)
// from africaopendata.org 
//
//
// ORIGINAL QUERY (if we known the domain and the database...):
// SELECT town_nearest, hazard_potential, capacity_1000_cub_m, size
// FROM dams
// WHERE region_code = "LIMPOPO"....
//
// FUZZY QUERY (if we don't known the dataset...) :
//

{
  "select": [
  	  { "column": { "instance": "dams", "label":"town"}},
  	  { "column": { "instance": "dams", "label":"hazard"}},
      { "column": { "instance": "dams", "label":"capacity"}}
  ],
  "from": [
    "dams"
  ],
  "where": [{"condition": {
      "instance1": "dams",
      "label1": "region",
      "operator": "eq",
      "value": "LIMPOPO",
      "logicalOperator": "and"
    }},{"condition": {
      "instance1": "dams",
      "label1": "hazard",
      "operator": "eq",
      "value": "Hight",
      "logicalOperator": "or"
    }},{"condition": {
      "instance1": "dams",
      "label1": "hazard",
      "operator": "eq",
      "value": "Significant",
      "logicalOperator": "or"
    }}
  ]
}
