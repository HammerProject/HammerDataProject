//
// NYC Health and Hospitals Corporation (HHC) Facilities
//

{
  "select": [
      { "column": { "instance": "healthcare provider", "label":"facilitytype"}},
      { "column": { "instance": "healthcare provider", "label":"borough"}},
      { "column": { "instance": "healthcare provider", "label":"faciltityname"}},
      { "column": { "instance": "healthcare provider", "label":"location"}}
  ],
  "from": [
    "healthcare provider"
  ],
  "where": [{"condition": {
      "instance1": "healthcare provider",
      "label1": "facilitytype",
      "operator": "eq",
      "value": "Child Health",
      "logicalOperator": "and"
    }}, {"condition": {
      "instance1": "healthcare provider",
      "label1": "borough",
      "operator": "eq",
      "value": "Bronx",
      "logicalOperator": "and"
    }}
  ]
}




//
// NYC Daily results from the entry points for orthophosphate, pH, temperature, 
// conductivity and monthly alkalinity, calcium, lead and copper - Bi annually updated
//

{
  "select": [
      { "column": { "instance": "lcr", "label":"sampledate"}},
      { "column": { "instance": "lcr", "label":"temperature"}},
      { "column": { "instance": "lcr", "label":"ph"}},
      { "column": { "instance": "lcr", "label":"alkalinity"}}
  ],
  "from": [
    "lcr"
  ],
  "where": [{"condition": {
      "instance1": "lcr",
      "label1": "sampledate",
      "operator": "gt",
      "value": "1/1/2016",
      "logicalOperator": "and"
    }}
  ]
}


//
// Locations of voting/poll sites through the city. This data is correct as of 10/19/16.
//

{
  "select": [
      { "column": { "instance": "elections", "label":"voterentrance"}},
      { "column": { "instance": "elections", "label":"streetname"}},
      { "column": { "instance": "elections", "label":"streetnumber"}},
      { "column": { "instance": "elections", "label":"handicapentrance"}},
      { "column": { "instance": "elections", "label":"location"}}
  ],
  "from": [
    "elections"
  ],
  "where": [{"condition": {
      "instance1": "elections",
      "label1": "city",
      "operator": "eq",
      "value": "New York",
      "logicalOperator": "and"
    }}
  ]
}




//
// Leaks and Their Cost Fact Sheet (faucets)
//

{
  "select": [
      { "column": { "instance": "water", "label":"leakingfixture"}},
      { "column": { "instance": "water", "label":"leaktype"}},
      { "column": { "instance": "water", "label":"waterwasted"}},
      { "column": { "instance": "water", "label":"totalcost"}},
      { "column": { "instance": "water", "label":"location"}}
  ],
  "from": [
    "water"
  ],
  "where": [{"condition": {
      "instance1": "water",
      "label1": "leakingfixture",
      "operator": "eq",
      "value": "faucets",
      "logicalOperator": "or"
    }}
  ]
}




//
// Electric Consumption And Cost (2010 - 2016)
//

{
  "select": [
      { "column": { "instance": "electricconsumption", "label":"borough"}},
      { "column": { "instance": "electricconsumption", "label":"account"}},
      { "column": { "instance": "electricconsumption", "label":"location"}},
      { "column": { "instance": "electricconsumption", "label":"metertype"}},
      { "column": { "instance": "electricconsumption", "label":"funding"}},
      { "column": { "instance": "electricconsumption", "label":"vendor"}},
      { "column": { "instance": "electricconsumption", "label":"funding"}},
      { "column": { "instance": "electricconsumption", "label":"meternumber"}},
      { "column": { "instance": "electricconsumption", "label":"consumptionkwh"}},
      { "column": { "instance": "electricconsumption", "label":"consumptionkw"}},
      { "column": { "instance": "electricconsumption", "label":"consumptionkwh"}},
      { "column": { "instance": "electricconsumption", "label":"kwhcharges"}},
      { "column": { "instance": "electricconsumption", "label":"kwcharges"}}
  ],
  "from": [
    "electricconsumption"
  ],
  "where": [{"condition": {
      "instance1": "electricconsumption",
      "label1": "month",
      "operator": "eq",
      "value": "2016/12",
      "logicalOperator": "or"
    }}
  ]
}
