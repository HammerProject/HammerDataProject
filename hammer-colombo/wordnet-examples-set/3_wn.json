{
  "select": [
      { "column": { "instance": "job", "label":"job"}},
      { "column": { "instance": "job", "label":"description"}},
      { "column": { "instance": "job", "label":"borough"}},
      { "column": { "instance": "job", "label":"address"}},
      { "column": { "instance": "job", "label":"applicant"}},
      { "column": { "instance": "job", "label":"date"}},
      { "column": { "instance": "job", "label":"cost"}}  
  ],
  "from": [
    "job"
  ],
  "where": [{"condition": {
      "instance1": "job",
      "label1": "mechanical",
      "operator": "eq",
      "value": "X",
      "logicalOperator": "or"
    }}, {"condition": {
      "instance1": "job",
      "label1": "plumbing",
      "operator": "eq",
      "value": "X",
      "logicalOperator": "or"
    }}, {"condition": {
      "instance1": "job",
      "label1": "boiler",
      "operator": "eq",
      "value": "X",
      "logicalOperator": "or"
    }}
  ]
}

